<h1 class="mb-5">Checkout a Book</h1>

<!-- Your flash alerts here if you have them -->

<%= form_with url: checkout_path, local: true do |f| %>

  <div class="mb-3">
    <%= f.label :book_id, "Select Book", class: "form-label" %>
    <%= f.select :book_id,
                 options_from_collection_for_select(@books, :id, :title),
                 { prompt: "— Choose a book —" },
                 class: "form-select" %>
  </div>

  <div class="mb-3">
    <%= f.label :customer_email, "Customer Email", class: "form-label" %>
    <%= f.email_field :customer_email, class: "form-control", placeholder: "sulav@example.com" %>
  </div>

  <div class="row">
    <div class="col-md-6 mb-3">
      <%= f.label :rented_on, "Rented On", class: "form-label" %>
      <%= f.date_field :rented_on, value: Date.today, class: "form-control" %>
    </div>

    <div class="col-md-6 mb-3">
      <%= f.label :returned_on, "Expected Return Date", class: "form-label" %>
      <%= f.date_field :returned_on, class: "form-control" %>
    </div>
  </div>

  <div class="text-end">
    <%= f.submit "Checkout Book", class: "btn btn-primary btn-lg" %>
  </div>

<% end %>

<hr class="my-5">

<div class="text-center">
  <%= link_to "← Back to All Books", library_books_path, class: "btn btn-outline-secondary" %>
</div>