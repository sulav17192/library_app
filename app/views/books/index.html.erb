<h1>Books</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><strong><%= book.title %></strong></td>
        <td><%= book.author %></td>
        <td>
          <%= link_to "View Details", "/books/#{book.id}" %>
          <%= link_to "Edit", "/books/#{book.id}/edit" %>
          <%= link_to "Delete", "/books/#{book.id}", 
                      data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, 
                      class: "btn btn-danger btn-sm" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Add New Book", "/books/new", class: "btn btn-success" %>