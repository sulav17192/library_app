<h1>Books</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Rating</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><strong><%= link_to book.title, library_book_path(book) %></strong></td>
        <td><%= book.author %></td>
        <td><%= book.rating %></td>
        <td>
          <%= link_to "View", library_book_path(book) %>
          <%= link_to "Edit", edit_library_book_path(book) %>
          <%= link_to "Delete", library_book_path(book),
                      data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
                      class: "btn btn-danger btn-sm" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Add New Book", new_library_book_path, class: "btn btn-success btn-lg" %>