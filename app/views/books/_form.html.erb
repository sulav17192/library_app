<% form_url = @book.persisted? ? library_book_path(@book) : library_books_path %>

<%= form_with model: @book, url: form_url, local: true do |form| %>
  <%= form.label :title %>
  <%= form.text_field :title %>

  <%= form.label :author %>
  <%= form.text_field :author %>

  <%= form.label :rating %>
  <%= form.number_field :rating %>

  <%= form.submit (@book.persisted? ? "Update Book" : "Add Book") %>
<% end %>