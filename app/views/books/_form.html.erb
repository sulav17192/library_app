<%= form_with model: @book, local: true, url: "/books#{@book.persisted? ? "/#{@book.id}" : ""}", method: (@book.persisted? ? :patch : :post) do |form| %>
  <%= form.label :title %>
  <%= form.text_field :title %>

  <%= form.label :author %>
  <%= form.text_field :author %>

  <%= form.label :rating %>
  <%= form.number_field :rating %>

  <%= form.submit %>
<% end %>